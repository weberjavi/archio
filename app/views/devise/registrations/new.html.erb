<div class="login-container">
<h2 class="login-title">Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name, class: "login-form__label" %><br />
    <%= f.text_field :name, autofocus: true, class: "login-form__field" %>
  </div>

  <div class="field">
    <%= f.label :email, class: "login-form__label" %><br />
    <%= f.email_field :email, class: "login-form__field"%>
  </div>

  <div class="field">
    <%= f.label :password, class: "login-form__label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "login-form__field" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "login-form__label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "login-form__field" %>
  </div>

  <div class="submit-wrap">
    <div class="actions submit">
      <%= f.submit "Sign up" %>
    </div>
  </div>
<% end %>

<div class="other_links">
  <%= render "devise/shared/links" %>
</div>