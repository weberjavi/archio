<%= form_for [@project, @building_sheet], method: "post" do |f| %>
  <ul>
    <%= f.label :description %>
    <li><%= f.text_field :description %></li>
    <%= f.label :substructure %>
    <li><%= f.text_field :substructure %></li>
    <%= f.fields_for :context do |context_form| %>
        <%= context_form.label :interpretation %>
        <li><%= context_form.text_field :interpretation %></li>
        <%= context_form.label :site_code %>
        <li><%= context_form.text_field :site_code %></li>
        <%= context_form.hidden_field :project_id, value: @project.id  %>
    <% end %>
  </ul>
  <%= f.submit "Create" %>
<% end %>